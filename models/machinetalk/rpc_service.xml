<?xml version = "1.0" ?>
<class name = "RPC Service" module = "Machinetalk" project="machinetalk" msg_prefix="MT">
  RPC/Service

  <socket type = "ROUTER" nature = "server" name="socket">
    Alle messages are passed over this socket.

    <outgoing name = "*">
      Any messge to client
    </outgoing>

    <outgoing name = "ping acknowledge">
      Ping acknowledge to client.
    </outgoing>

    <incoming name = "ping" ignore = "true">
      Ping from client.
      <event name = "ping received" when = "up"/>
    </incoming>

    <incoming name = "*">
      Any message from client.
    </incoming>

  </socket>

  <trigger name = "start">
    <event name = "start" when = "down"/>
  </trigger>

  <trigger name = "stop">
    <event name = "stop" when = "up"/>
  </trigger>

  <fsm name = "fsm" initial = "down">
    <state name = "down" inherit = "defaults">
        <event name = "start" next = "up">
          <action name = "start socket" />
        </event>
    </state>
    <state name = "up">
      <event name = "ping received" next = "up">
        <action name = "send ping acknowledge" />
      </event>
      <event name = "stop" next = "down">
        <action name = "stop socket" />
      </event>
    </state>
  </fsm>
</class>
