<?xml version = "1.0" ?>
<class name = "Subscribe" module = "Common" project="Machinetalk" msg_prefix="MT">
  Subscribe
  <socket type = "SUB" nature = "client" name = "socket">
    Alle messages are passed over this socket.

    <incoming name = "*">
      Any message from publiser.
      <event name = "any msg received" when = "up"/>
    </incoming>

    <incoming name = "ping" ignore = "true">
      The server sends pings every once in a while.
    </incoming>

    <incoming name = "full update">
      A full update message from the publisher.
      <event name = "full update received" when = "trying" />
      <pparams />
    </incoming>

    <incoming name = "incremental update">
      A incremental update message from the publisher.
    </incoming>

  </socket>

  <timer
      name = "heartbeat"
      interval = "2500"
      liveness = "2" >
    For monitoring if the connection is alive.
    <tick>
      <event name = "heartbeat tick" when = "up" />
    </tick>
    <timeout>
      <event name = "heartbeat timeout" when = "up" />
    </timeout>
  </timer>

  <trigger name = "start">
    <event name = "start" when = "down"/>
  </trigger>

  <trigger name = "stop">
    <event name = "stop" when = "trying"/>
    <event name = "stop" when = "up"/>
  </trigger>

  <fsm name = "fsm" initial = "down">
    <state name = "down">
      <event name = "start" next = "trying">
        <action name = "start socket" />
      </event>
    </state>

    <state name = "trying" inherit = "defaults">
      <event name = "full update received" next = "up">
        <action name = "reset heartbeat liveness" />
        <action name = "start heartbeat timer" />
      </event>
    </state>

    <state name = "up" inherit = "defaults">
      <event name = "heartbeat timeout" next = "trying">
        <action name = "stop heartbeat timer" />
        <action name = "stop socket" />
        <action name = "start socket" />
      </event>
      <event name = "heartbeat tick" next = "up">
        <action name = "reset heartbeat timer" />
      </event>
      <event name = "any msg received" next = "up">
        <action name = "reset heartbeat liveness" />
        <action name = "reset heartbeat timer" />
      </event>
    </state>

    <state name = "defaults">
      <event name = "stop" next = "down">
        <action name = "stop heartbeat timer" />
        <action name = "stop socket" />
      </event>
    </state>
  </fsm>
</class>
